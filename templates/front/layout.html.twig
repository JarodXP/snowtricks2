{% extends 'base.html.twig' %}

{% block body %}

    <!--Desktop nav-->
    <nav id="desktop-nav" class="front-nav">
        <div id="nav-logo">SNOWTRICKS</div>
        <ul class="nav-menu">
            <li class="menu-item"><a href="/">Home</a></li>
            <li class="menu-item"><a href="/#trick-list">Tricks</a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% include '_connected_desktop.html.twig' %}
            {% else %}
                <li class="menu-item"><a href="/auth/login">Sign In</a></li>
                <li class="menu-item"><a href="/auth/signup">Sign Up</a></li>
            {% endif %}
        </ul>
    </nav>
    <!--end Desktop nav-->

    <!--Mobile nav-->
    <nav id="mobile-nav" class="hidden front-nav">
        <ul class="nav-menu">
            <li class="menu-item"><a href="/"><i class="fas fa-igloo"></i></a></li>
            <li class="menu-item"><a href="/#trick-list"><i class="fas fa-snowboarding"></i></a></li>
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                {% include '_connected_mobile.html.twig' %}
            {% else %}
                <li class="menu-item"><a href="/auth/sign-in"><i class="fas fa-sign-in-alt"></i></a></li>
            {% endif %}
        </ul>
    </nav>
    <!--end Mobile nav-->

    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% include '_connected_submenu.html.twig' %}
    {% endif %}

    <div id="main-wrapper">

        {% block mainContent %}{% endblock %}

    </div>

    <footer>
        <p>Copyright</p>
        <p><a>Confidentialit√©</a></p>
    </footer>

{% endblock %}