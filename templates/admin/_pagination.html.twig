<nav id="pagination-nav" aria-label="pagination-nav">
    {{ form_start(paginationForm) }}

    {{ form_row(paginationForm.order,{'attr':{'value':params.order}}) }}
    {{ form_row(paginationForm.direction,{'attr':{'value':params.direction}}) }}
    {{ form_row(paginationForm.filter,{'attr':{'value':params.filter}}) }}

    {{ form_row(paginationForm.limit) }}
    <button class="btn btn-primary" type="submit">Find</button>

    {{ form_end(paginationForm) }}

    <ul class="pagination">
        {{ _self.pagination(currentPage, pages, paginationForm, route) }}
    </ul>
</nav>

{% macro pagination(currentPage, pages, paginationForm, route) %}

    {% set previousPage = currentPage-1 %}
    {% set nextPage = currentPage+1 %}


    {% if currentPage > 1 %}

        <li class="page-item">
            <button class="page-link" type="submit" form="{{ paginationForm.vars.attr.id }}"
                    formaction="{{ path(route, {'page':1}) }}"> << </button>
        </li>

        <li class="page-item">
            <button class="page-link" type="submit" form="{{ paginationForm.vars.attr.id }}"
                    formaction="{{ path(route, {'page':previousPage}) }}"> < </button>
        </li>

    {% endif %}

    {% if previousPage >= 1 %}
        <li class="page-item">
            <button class="page-link" type="submit" form="{{ paginationForm.vars.attr.id }}"
                    formaction="{{ path(route, {'page':previousPage}) }}">{{ previousPage }}</button>
        </li>
    {% endif %}

    <li class="page-item">
        <button class="page-link disabled " ><u>{{ currentPage }}</u></button>
    </li>

    {% if nextPage <= pages %}
        <li class="page-item">
            <button class="page-link" type="submit" form="{{ paginationForm.vars.attr.id }}"
                    formaction="{{ path(route, {'page':nextPage}) }}">{{ nextPage }}</button>
        </li>
        <li class="page-item">
            <button class="page-link" type="submit" form="{{ paginationForm.vars.attr.id }}"
                    formaction="{{ path(route, {'page':nextPage}) }}"> > </button>
        </li>
    {% endif %}

    {% if currentPage < pages %}
        <li class="page-item">
            <button class="page-link" type="submit" form="{{ paginationForm.vars.attr.id }}"
                    formaction="{{ path(route, {'page':pages}) }}"> >> </button>
        </li>
    {% endif %}


{% endmacro %}