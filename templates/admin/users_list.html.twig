{% extends 'admin/layout.html.twig' %}

{% block title %}Admin Users{% endblock %}

{% block mainContent %}
    <div id="admin-users-list" class="admin-content">
        <h1>List of users</h1>
        <form>
            <table class="jxp-admin-table">
                <thead>
                <tr>
                    <th>Avatar</th>
                    <th>Username</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Date Added</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Edit</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>
                            <div class="jxp-avatar-thumbnail">
                                <img src="/media/{{ user.avatar.filename }}" alt="{{ user.avatar.alt }}">
                            </div>
                        </td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.firstName }}</td>
                        <td>{{ user.lastName }}</td>
                        <td>{{ user.dateAdded |date('Y-m-d') }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.role.name }}</td>
                        <td class="table-edit-cell"><i class="far fa-edit"></i><i class="far fa-trash-alt"></i></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </form>

        <div class="jxp-table-pagination">
            <select id="limit" class="jxp-pagination-limit">
                <option value="10">10</option>
                <option value="25">25</option>
                <option value="50">50</option>
                <option value="100">100</option>
            </select>
            <div class="jxp-pagination-pages">
                <i class="fas fa-chevron-circle-left"></i>
                <p>Page 1 / 1</p>
                <i class="fas fa-chevron-circle-right"></i>
            </div>
        </div>

    </div>
{% endblock %}